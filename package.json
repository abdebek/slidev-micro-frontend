{
  "name": "microfrontend-demo",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:landing\" \"npm run dev:slides\"",
    "dev:landing": "cd landing && npm run dev",
    "dev:slides": "cd slides && npm run dev",
    "build": "npm run build:landing && npm run build:slides",
    "build:landing": "cd landing && npm run build",
    "build:slides": "cd slides && npm run build",
    "preview": "concurrently \"npm run preview:landing\" \"npm run preview:slides\"",
    "preview:landing": "cd landing && npm run preview",
    "preview:slides": "cd slides && npm run preview"
  },
  "dependencies": {
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitejs/plugin-vue": "5.2.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2"
  }
}